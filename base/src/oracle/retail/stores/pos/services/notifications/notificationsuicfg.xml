<!DOCTYPE UICFG SYSTEM "classpath://oracle/retail/stores/pos/config/defaults/posui.dtd">
<UICFG>

    <BEAN
        specName="NotificationsListSpec"
        configuratorPackage="oracle.retail.stores.pos.ui"
        configuratorClassName="POSBeanConfigurator"
        beanPackage="oracle.retail.stores.pos.ui.beans"
        beanClassName="ListBean">
        <BEANPROPERTY propName="renderer"
                      propValue="oracle.retail.stores.pos.ui.beans.NotificationsListRenderer"/>
        <BEANPROPERTY propName="labelTags" propValue="NotificationLabel,DateLabel"/>
        <BEANPROPERTY propName="labelWeights" propValue="84,16"/>
        <BEANPROPERTY propName="focused" propValue="true"/>
    </BEAN>
    
    <BEAN
        specName="NotificationsDoneButtonSpec"
        configuratorPackage="oracle.retail.stores.pos.ui"
        configuratorClassName="POSBeanConfigurator"
        beanPackage="oracle.retail.stores.pos.ui.beans"
        beanClassName="NavigationButtonBean">
        <BUTTON
            actionName="Done"
            enabled="true"
            keyName="F2"
            labelTag="Done"/>
    </BEAN>    
    
    <OVERLAYSCREEN
        defaultScreenSpecName="EYSPOSDefaultSpec"
        resourceBundleFilename="notificationsText"
        specName="NOTIFICATIONS_LIST">

        <ASSIGNMENT
            areaName="WorkPanel"
            beanSpecName="NotificationsListSpec">
        </ASSIGNMENT>

        <ASSIGNMENT
             areaName="StatusPanel"
             beanSpecName="StatusPanelSpec">
             <BEANPROPERTY
                 propName="screenNameTag" propValue="NotificationsListScreenName"/>
        </ASSIGNMENT>

        <ASSIGNMENT
            areaName="PromptAndResponsePanel"
            beanSpecName="PromptAndResponsePanelSpec">
            <BEANPROPERTY
                propName="promptTextTag" propValue="NotificationsListPromptText"/>
        </ASSIGNMENT>
        
        <ASSIGNMENT
            areaName="LocalNavigationPanel"
            beanSpecName="NotificationsDoneButtonSpec">
        </ASSIGNMENT>
                
        <ASSIGNMENT
            areaName="GlobalNavigationPanel"
            beanSpecName="GlobalNavigationPanelSpec">
            <BEANPROPERTY
                propName="manageNextButton" propValue="false"/>
            <BEANPROPERTY
                propName="buttonStates" propValue="Help[true],Cancel[false],Undo[false],Next[false]"/>
        </ASSIGNMENT>
    </OVERLAYSCREEN>    

</UICFG>