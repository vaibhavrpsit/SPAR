<!DOCTYPE UICFG SYSTEM "classpath://oracle/retail/stores/pos/config/defaults/posui.dtd">

<UICFG>

    <BEAN
        specName="GiftCardSpec"
        configuratorPackage="oracle.retail.stores.pos.ui"
        configuratorClassName="POSBeanConfigurator"
        beanPackage="oracle.retail.stores.pos.ui.beans"
        beanClassName="GiftCardBean">
    </BEAN>

    <BEAN
        specName="GiftCardOptionsButtonSpec"
        configuratorPackage="oracle.retail.stores.pos.ui"
        configuratorClassName="POSBeanConfigurator"
        beanPackage="oracle.retail.stores.pos.ui.beans"
        beanClassName="NavigationButtonBean">
        <BUTTON
            labelTag="Issue"
            actionName="Issue"
            enabled="true"
            keyName="F2" />

        <BUTTON
            labelTag="Reload"
            actionName="Reload"
            enabled="true"
            keyName="F3" />
    </BEAN>
    
      <BEAN
        specName="GiftCardOptionsPopupButtonSpec"
        configuratorPackage="oracle.retail.stores.pos.ui"
        configuratorClassName="POSBeanConfigurator"
        beanPackage="oracle.retail.stores.pos.ui.beans"
        beanClassName="NavigationButtonBean">
        <BUTTON
            labelTag="Issue"
            actionName="Issue"
            enabled="true"
            keyName="F2" />

        <BUTTON
            labelTag="Reload"
            actionName="Reload"
            enabled="true"
