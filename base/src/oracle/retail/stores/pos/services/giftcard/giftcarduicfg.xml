        beanPackage="oracle.retail.stores.pos.ui.beans"
        beanClassName="NavigationButtonBean">
        <BUTTON
            labelTag="Done"
            actionName="Done"
            enabled="true"
            keyName="F2" />
        <BUTTON
            labelTag="Print"
            actionName="Print"
            enabled="true"
            keyName="F3" />
    </BEAN>

    <BEAN
        specName="GiftCardAmountButtonSpec"
        configuratorPackage="oracle.retail.stores.pos.ui"
        configuratorClassName="POSBeanConfigurator"
        beanPackage="oracle.retail.stores.pos.ui.beans"
        beanClassName="NavigationButtonBean">
        <BUTTON
            labelTag="First"
            actionName="First"
            enabled="true"
            keyName="F2" />
        <BUTTON
            labelTag="Second"
            actionName="Second"
            enabled="true"
            keyName="F3" />
        <BUTTON
            labelTag="Third"
            actionName="Third"
            enabled="true"
            keyName="F4" />
        <BUTTON
            labelTag="Fourth"
            actionName="Fourth"
