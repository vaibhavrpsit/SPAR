<!DOCTYPE SERVICE SYSTEM "classpath://oracle/retail/stores/foundation/tour/dtd/tourguide.dtd">
<SERVICE name="BrowserFoundation" package="oracle.retail.stores.pos.services.browserfoundation" tourcam="OFF">
    <COMMENT>
         Service that will launch a browser in POS window.
    </COMMENT>
    <CARGO class="BrowserFoundationCargo" package="oracle.retail.stores.pos.services.browserfoundation"/>
    <SERVICECODE>
        <LETTER name="displayBrowser"/>
        <LETTER name="Undo"/>
        <LETTER name="Login"/>
        <SITEACTION class="BrowserFoundationAppSite" package="oracle.retail.stores.pos.services.browserfoundation"/>
        <SITEACTION class="CheckOperatorLoggedInSite" package="oracle.retail.stores.pos.services.admin.security.common"/>
        <SITEACTION class="CheckAccessSite" package="oracle.retail.stores.pos.services.admin.security.common"/>
        <SHUTTLE class="OperatorIdReturnShuttle" package="oracle.retail.stores.pos.services.common"/>
        <SHUTTLE class="OperatorIdLaunchShuttle" package="oracle.retail.stores.pos.services.common"/>
        <SHUTTLE class="SecurityOverrideLaunchShuttle" package="oracle.retail.stores.pos.services.admin.security.common"/>        
        <LANEACTION class="FailureConversionAisle" package="oracle.retail.stores.pos.services.common" />
    </SERVICECODE>
    <MAP>
        <REGION region="SERVICE" startsite="BrowserFoundationCheckLogin">
                <SITE  name="BrowserFoundationCheckLogin" siteaction="CheckOperatorLoggedInSite">
                    <ROAD
                        name="OperatorExsisting"
                        letter="Continue"
                        destination="CheckAccess"
                        tape="ADVANCE"
                        record="OFF"
                        index="OFF">
                    </ROAD>                    
                    <ROAD
                        name="LoginRequired"
                        letter="Login"
                        destination="OperatorIdStation"
                        tape="ADVANCE"
                        record="OFF"
                        index="OFF">
                    </ROAD>
                </SITE>                
                <STATION
                    name="OperatorIdStation"
                    servicename="services.operatorid.operatorid"
                    targettier="CURRENTTIER"
                    launchshuttle="OperatorIdLaunchShuttle"
                    returnshuttle="OperatorIdReturnShuttle">
                    <ROAD
                        name="LoginSucceeded"
                        letter="Success"
                        destination="CheckAccess"
                        tape="ADVANCE"
                        record="OFF"
                        index="OFF">
                    </ROAD>
                    <AISLE
                        name="LoginUndo"
                        letter="Undo"
                        laneaction="FailureConversionAisle">
                        <COMMENT >
                            This aisle is traversed to convert the current letter
                            to Failure
                        </COMMENT>
                    </AISLE>
                    <ROAD
                        name="LoginFailed"
                        letter="Failure"
                        destination="Final"
                        tape="ADVANCE" record="ON" index="ON">
                    </ROAD>                   
                </STATION>
                <SITE name="CheckAccess" siteaction="CheckAccessSite">
                   <ROAD
                        name="AccessGranted"
                        letter="Continue"
                        destination="BrowserFoundationApp"
                        tape="ADVANCE" record="OFF" index="OFF">
                    </ROAD>
                    <ROAD
                        name="AccessDenied"
                        letter="Override"
                        destination="SecurityOverrideStation"
                        tape="ADVANCE" record="OFF" index="OFF">
                    </ROAD>                    
                </SITE>
                <STATION name="SecurityOverrideStation"
                    servicename="security.override.override"
                    targettier="CURRENTTIER"
                    launchshuttle="SecurityOverrideLaunchShuttle" >
                    <ROAD
                        name="AdminAccessDenied"
                        letter="Failure"
                        destination="Final" >
                    </ROAD>
                    <ROAD
                        name="SecurityOverrideSucceeded"
                        letter="Success"
                        destination="BrowserFoundationApp"
                        tape="ADVANCE" record="OFF" index="OFF">
                    </ROAD>
                    <ROAD
                        name="SecurityOverrideCancelled"
                        letter="Cancel"
                        destination="Final"
                        tape="ADVANCE" record="OFF" index="OFF">
                    </ROAD>
                </STATION>
                <SITE  name="BrowserFoundationApp" siteaction="BrowserFoundationAppSite">
                    <ROAD
                        name="BrowserFoundationSelected"
                        letter="displayBrowser"
                        destination="BrowserFoundationApp"
                        tape="ADVANCE"
                        record="ON"
                        index="ON">
                    </ROAD>
                    <ROAD
                        name="UndoSelected"
                        letter="Undo"
                        destination="Final"
                        tape="ADVANCE"
                        record="OFF"
                        index="OFF">
                    </ROAD>
                </SITE>
                <SYSTEMSITE name="Final" action="RETURN" />
        </REGION>
    </MAP>
</SERVICE>