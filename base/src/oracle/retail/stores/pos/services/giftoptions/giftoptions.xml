<!DOCTYPE SERVICE SYSTEM "classpath://oracle/retail/stores/foundation/tour/dtd/tourguide.dtd">

<SERVICE
    name="GiftOptions"
    package="oracle.retail.stores.pos.services.giftoptions"
    tourcam="ON">
    <COMMENT >
        Point-Of-Sale is the implementation of the Gift Options
        Package Requirements.
    </COMMENT>
    <CARGO  class="GiftCardCargo" package="oracle.retail.stores.pos.services.giftcard"/>
    <SERVICECODE >
        <LETTER name="GiftCard"/>
        <LETTER name="GiftCert"/>
        <LETTER name="Success"/>
        <LETTER name="Continue"/>
        <LETTER name="Cancel"/>
        <LETTER name="Undo"/>

        <SHUTTLE class="GiftCardLaunchShuttle"/>
        <SHUTTLE class="GiftCardReturnShuttle"/>

        <SITEACTION class="SelectGiftOptionSite"/>
    </SERVICECODE>
    <MAP >
        <REGION  region="SERVICE" startsite="SelectGiftOption">
            <SITE name="SelectGiftOption" siteaction="SelectGiftOptionSite">
                <COMMENT>
                    This site handles gift card and gift certificate
                </COMMENT>
                <ROAD
                    name="GiftCardOptionsSelected"
                    letter="GiftCard"
                    destination="GiftCardOptionsStation"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
                <ROAD
                    name="GiftCertSelected"
                    letter="GiftCert"
                    destination="GiftCertificateIssueStation"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
                <ROAD
                    name="UndoGiftOptionsSelected"
                    letter="Undo"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
                <ROAD
                    name="CancelGiftOptionsSelected"
                    letter="Cancel"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
                <ROAD
                    name="MenuCancelled"
                    letter="CancelMenu"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
            </SITE>
            <STATION
                name="GiftCardOptionsStation"
                servicename="services.giftcard.giftcard"
                targettier="APPLICATIONTIER"
                launchshuttle="GiftCardLaunchShuttle"
                returnshuttle="GiftCardReturnShuttle">
                <ROAD
                    name="GiftCardItemAdded"
                    letter="Continue"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
                <ROAD
                    name="UndoGiftCardOptionsSelected"
                    letter="Undo"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
                <ROAD
                    name="OptionsMenuCanceled"
                    letter="CancelMenu"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
                <ROAD
                    name="GiftCardOptionsCanceled"
                    letter="Cancel"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
            </STATION>
         <STATION
                name="GiftCardIssueStation"
                servicename="giftcard.issue.issue"
                targettier="APPLICATIONTIER"
                launchshuttle="GiftCardLaunchShuttle"
                returnshuttle="GiftCardReturnShuttle">
                <ROAD
                    name="GiftCardItemAdded"
                    letter="Continue"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
                <ROAD
                    name="CancelSelected"
                    letter="Cancel"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
                <ROAD
                    name="UndoSelected"
                    letter="Undo"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
            </STATION>
         <STATION
                name="GiftCertificateIssueStation"
                servicename="giftcertificate.issue.issue"
                targettier="APPLICATIONTIER"
                launchshuttle="GiftCardLaunchShuttle"
                returnshuttle="GiftCardReturnShuttle">
                <ROAD
                    name="GiftCertificateItemAdded"
                    letter="Continue"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
                <ROAD
                    name="CancelSelected"
                    letter="Cancel"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
                <ROAD
                    name="UndoSelected"
                    letter="Undo"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
            </STATION>

            <SYSTEMSITE  name="Final" action="RETURN"/>
            <SYSTEMSITE  name="LastIndexed" action="BACKUP"/>
            <SYSTEMSITE  name="NamedIndex" action="BACKUP"/>
        </REGION>
    </MAP>
</SERVICE>
