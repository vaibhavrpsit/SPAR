<!DOCTYPE SERVICE SYSTEM "classpath://oracle/retail/stores/foundation/tour/dtd/tourguide.dtd">

<SERVICE
    name="CaptureCustomerInfo"
    package="oracle.retail.stores.pos.services.tender.capturecustomerinfo"
    tourcam="ON">
    <COMMENT >
        This service implements the Capture Customer Information
        use case.
    </COMMENT>
    <CARGO  class="CaptureCustomerInfoCargo"/>
    <SERVICECODE >
        <LETTER name="Failure"/>
        <LETTER    name="Next"/>
        <LETTER    name="Success"/>
        <LETTER    name="Cancel"/>
        <LETTER name="Undo"/>
        <LETTER name="Retry"/>

        <SITEACTION    class="CaptureCustomerInfoSite"/>
        <SITEACTION class="ValidateCustomerInfoSite"/>
    </SERVICECODE>
    <MAP >
        <REGION region="SERVICE" startsite="CaptureCustomerInfo">
            <SITE name="CaptureCustomerInfo" siteaction="CaptureCustomerInfoSite">
                <ROAD
                    name="CustomerInfoEntered"
                    letter="Next"
                    destination="ValidateCustomerInfo"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
                <ROAD
                    name="FailureFromCapture"
                    letter="Failure"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
                <ROAD
                    name="CancelSelected"
                    letter="Cancel"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
                <ROAD
                    name="UndoSelected"
                    letter="Undo"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
                <ROAD
                    name="Skip"
                    letter="Skip"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
            </SITE>
            <SITE name="ValidateCustomerInfo" siteaction="ValidateCustomerInfoSite">
                <ROAD
                    name="CustomerInfoValidated"
                    letter="Success"
                    destination="Final"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
                <ROAD
                    name="CustomerInfoFailed"
                    letter="Retry"
                    destination="CaptureCustomerInfo"
                    tape="ADVANCE"
                    record="OFF"
                    index="OFF">
                </ROAD>
            </SITE>
            <SYSTEMSITE  name="Final" action="RETURN"/>
        </REGION>
    </MAP>
</SERVICE>
