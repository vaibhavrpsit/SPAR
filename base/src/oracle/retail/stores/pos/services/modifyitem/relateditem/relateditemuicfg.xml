<!DOCTYPE UICFG SYSTEM "classpath://oracle/retail/stores/pos/config/defaults/posui.dtd">

<UICFG>

    <BEAN specName="RelatedItemOptionButtonSpec"
        configuratorPackage="oracle.retail.stores.pos.ui"
        configuratorClassName="POSBeanConfigurator"
        beanPackage="oracle.retail.stores.pos.ui.beans"
        beanClassName="NavigationButtonBean">

        <BUTTON
            actionName="CROSSSELL"
            enabled="true"
            keyName="F2"
            labelTag="CrossSell"/>
        <BUTTON
            actionName="UPSELL"
            enabled="true"
            keyName="F3"
            labelTag="Upsell"/>
        <BUTTON
            actionName="SUBSTITUTE"
            enabled="true"
            keyName="F3"
            labelTag="Substitute"/>     
        <BUTTON
            actionName="Add"
            enabled="true"
            keyName="F3"
            labelTag="Add"/>                                
    </BEAN>
    
    
    <!-- Related Item screen -->
    <BEAN specName="RelatedItemsListSpec"
        configuratorPackage="oracle.retail.stores.pos.ui"
        configuratorClassName="POSBeanConfigurator"
        beanPackage="oracle.retail.stores.pos.ui.beans"
        beanClassName="RelatedItemListBean">
        <BEANPROPERTY propName="renderer"
            propValue="oracle.retail.stores.pos.ui.beans.RelatedItemListRenderer" />
        <BEANPROPERTY propName="labelTags"
            propValue="ItemLabel,DepartmentLabel,PriceLabel"/>
        <BEANPROPERTY propName="labelWeights"
            propValue="50,30,20"/>
        <BEANPROPERTY propName="focused" propValue="false" />
        <BEANPROPERTY propName="selectionMode" propValue="multi" />
    </BEAN>

    <!-- Related Item Overlay -->
    <OVERLAYSCREEN defaultScreenSpecName="EYSPOSDefaultSpec"
        resourceBundleFilename="relateditemsText" specName="RELATED_ITEM_OPTION">

        <ASSIGNMENT areaName="GlobalNavigationPanel"
            beanSpecName="GlobalNavigationPanelSpec">
            <BEANPROPERTY propName="manageNextButton" propValue="false" />

            <BEANPROPERTY propName="buttonStates"
                propValue="Help[true],Cancel[false],Undo[true],Clear[false],Next[false],Keys[true]" />
        </ASSIGNMENT>

        <ASSIGNMENT areaName="PromptAndResponsePanel"
            beanSpecName="PromptAndResponsePanelSpec">

            <BEANPROPERTY propName="promptTextTag"
                propValue="RelatedItemPrompt" />
        </ASSIGNMENT>

        <ASSIGNMENT areaName="StatusPanel"
            beanSpecName="StatusPanelSpec">

            <BEANPROPERTY propName="screenNameTag"
                propValue="RelatedItemScreenName" />
        </ASSIGNMENT>

        <ASSIGNMENT areaName="LocalNavigationPanel"
            beanSpecName="RelatedItemOptionButtonSpec">
        </ASSIGNMENT>
    </OVERLAYSCREEN>
    
    <!-- Cross Sale Related Item Overlay -->
    <OVERLAYSCREEN defaultScreenSpecName="EYSPOSDefaultSpec"
        resourceBundleFilename="relateditemsText" specName="CROSS_SELL_RELATED_ITEMS">

        <ASSIGNMENT areaName="GlobalNavigationPanel"
            beanSpecName="GlobalNavigationPanelSpec">
            <BEANPROPERTY propName="manageNextButton" propValue="false" />

            <BEANPROPERTY propName="buttonStates"
                propValue="Help[true],Cancel[false],Undo[true],Clear[false],Next[false],Keys[true]" />
        </ASSIGNMENT>

        <ASSIGNMENT areaName="WorkPanel"
            beanSpecName="RelatedItemsListSpec">
        </ASSIGNMENT>

        <ASSIGNMENT areaName="PromptAndResponsePanel"
            beanSpecName="PromptAndResponsePanelSpec">

            <BEANPROPERTY propName="promptTextTag"
                propValue="CrossSellRelatedItemListPrompt" />
        </ASSIGNMENT>

        <ASSIGNMENT areaName="StatusPanel"
            beanSpecName="StatusPanelSpec">

            <BEANPROPERTY propName="screenNameTag"
                propValue="CrossSellRelatedItemListScreenName" />
        </ASSIGNMENT>

        <ASSIGNMENT areaName="LocalNavigationPanel"
            beanSpecName="RelatedItemOptionButtonSpec">
        </ASSIGNMENT>
    </OVERLAYSCREEN>
    
    <!-- Upsell Related Item Overlay -->
    <OVERLAYSCREEN defaultScreenSpecName="EYSPOSDefaultSpec"
        resourceBundleFilename="relateditemsText" specName="UPSELL_RELATED_ITEMS">

        <ASSIGNMENT areaName="GlobalNavigationPanel"
            beanSpecName="GlobalNavigationPanelSpec">
            <BEANPROPERTY propName="manageNextButton" propValue="false" />

            <BEANPROPERTY propName="buttonStates"
                propValue="Help[true],Cancel[false],Undo[true],Clear[false],Next[false],Keys[true]" />
        </ASSIGNMENT>

        <ASSIGNMENT areaName="WorkPanel"
            beanSpecName="RelatedItemsListSpec">
        </ASSIGNMENT>

        <ASSIGNMENT areaName="PromptAndResponsePanel"
            beanSpecName="PromptAndResponsePanelSpec">

            <BEANPROPERTY propName="promptTextTag"
                propValue="UpsellRelatedItemListPrompt" />
        </ASSIGNMENT>

        <ASSIGNMENT areaName="StatusPanel"
            beanSpecName="StatusPanelSpec">

            <BEANPROPERTY propName="screenNameTag"
                propValue="UpsellRelatedItemListScreenName" />
        </ASSIGNMENT>

        <ASSIGNMENT areaName="LocalNavigationPanel"
            beanSpecName="RelatedItemOptionButtonSpec">
        </ASSIGNMENT>
    </OVERLAYSCREEN>    
    
    <!-- Subsititute Related Item Overlay -->
    <OVERLAYSCREEN defaultScreenSpecName="EYSPOSDefaultSpec"
        resourceBundleFilename="relateditemsText" specName="SUBSTITUTE_RELATED_ITEMS">

        <ASSIGNMENT areaName="GlobalNavigationPanel"
            beanSpecName="GlobalNavigationPanelSpec">
            <BEANPROPERTY propName="manageNextButton" propValue="false" />

            <BEANPROPERTY propName="buttonStates"
                propValue="Help[true],Cancel[false],Undo[true],Clear[false],Next[false],Keys[true]" />
        </ASSIGNMENT>

        <ASSIGNMENT areaName="WorkPanel"
            beanSpecName="RelatedItemsListSpec">
        </ASSIGNMENT>

        <ASSIGNMENT areaName="PromptAndResponsePanel"
            beanSpecName="PromptAndResponsePanelSpec">

            <BEANPROPERTY propName="promptTextTag"
                propValue="SubstituteRelatedItemListPrompt" />
        </ASSIGNMENT>

        <ASSIGNMENT areaName="StatusPanel"
            beanSpecName="StatusPanelSpec">

            <BEANPROPERTY propName="screenNameTag"
                propValue="SubstituteRelatedItemListScreenName" />
        </ASSIGNMENT>

        <ASSIGNMENT areaName="LocalNavigationPanel"
            beanSpecName="RelatedItemOptionButtonSpec">
        </ASSIGNMENT>
    </OVERLAYSCREEN>    

</UICFG>
