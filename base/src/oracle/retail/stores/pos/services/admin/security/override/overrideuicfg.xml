<!DOCTYPE UICFG SYSTEM "classpath://oracle/retail/stores/pos/config/defaults/posui.dtd">
<UICFG>

    <BEAN
        specName="YesNoButtonsSpec"
        configuratorPackage="oracle.retail.stores.pos.ui"
        configuratorClassName="POSBeanConfigurator"
        beanPackage="oracle.retail.stores.pos.ui.beans"
        beanClassName="DialogNavigationButtonBean">

        <BUTTON
            actionName="Yes"
            enabled="true"
            labelTag="Yes"
            label="Yes"
            keyName="Enter" />
        <BUTTON
            actionName="Failure"
            enabled="true"
            labelTag="No"
            label="No"
            keyName="Esc"/>
            <!-- a ConfirmActionListener is added to dialog button by default. -->
    </BEAN>

    <!-- This dialog is produced when prompting for manager override login. -->
    <OVERLAYSCREEN
        specName="OVERRIDE_DIALOG"
        resourceBundleFilename="dialogText"
        defaultScreenSpecName="DefaultDialogSpec" >
        <ASSIGNMENT
            areaName="DialogMainPanel"
            beanSpecName="DialogSpec" />
        <ASSIGNMENT
            areaName="DialogButtonsPanel"
            beanSpecName="YesNoButtonsSpec"/>
    </OVERLAYSCREEN>

</UICFG>
