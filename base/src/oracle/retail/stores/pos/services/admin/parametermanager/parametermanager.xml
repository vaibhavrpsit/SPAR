<!DOCTYPE SERVICE SYSTEM "classpath://oracle/retail/stores/foundation/tour/dtd/tourguide.dtd">

<SERVICE
    name="ParameterManager"
    package="oracle.retail.stores.pos.services.admin.parametermanager"
    tourcam="OFF">
    <COMMENT >
        This services lets one inspect and edit retail parameters.
        Retail Parameters contain data that help control
        store operations.
    </COMMENT>
    <CARGO  class="ParameterCargo"/>
    <SERVICECODE >
        <LANEACTION class="CorpParamJournalOverrideSuccessRoad"/>
        <LANEACTION class="FailureConversionAisle" package="oracle.retail.stores.pos.services.common"/>
        <LANEACTION class="StoreNewCurrencyValuesAisle"/>
        <LANEACTION class="StoreNewDecimalValuesAisle"/>
        <LANEACTION class="StoreNewISODateValuesAisle"/>
        <LANEACTION class="StoreNewDiscreteValuesAisle"/>
        <LANEACTION class="StoreNewMultilineStringValueAisle"/>
        <LANEACTION class="StoreNewListFromListValuesAisle"/>
        <LANEACTION class="StoreNewStringValueAisle"/>
        <LANEACTION class="StoreNewWholeValuesAisle"/>
        <LANEACTION class="DeletionAbortedRoad" >
             <COMMENT>
               Restore the parameter values because the user has changed
               his mind about deleting.
             </COMMENT>
        </LANEACTION>
        <LANEACTION class="StoreParamGroupAisle">
            <COMMENT >
                Store the parameter group as entered at the UI.
            </COMMENT>
        </LANEACTION>
        <LANEACTION class="StoreParamLevelAisle">
            <COMMENT >
                Store the location level indicated by the UI in the 
                cargo.
            </COMMENT>
        </LANEACTION>
        <LANEACTION class="StoreParamStoreAisle">
            <COMMENT >
                Store the store name retrieved from the UI.
            </COMMENT>
        </LANEACTION>
        <LANEACTION class="StoreParameterAisle">
            <COMMENT >
                Store the parameter that the user has chosen in the 
                cargo.
            </COMMENT>
        </LANEACTION>
