                    name="StoreParamGroup"
                    letter="Next"
                    laneaction="StoreParamGroupAisle">
                    <COMMENT >
                        Store the parameter group as entered at the UI.
                    </COMMENT>
                </AISLE>
                <AISLE
                    name="CheckGroupAccess"
                    letter="CheckAccess"
                    laneaction="CheckAccessAisle">
                    <COMMENT >
                        Store the parameter group as entered at the UI.
                    </COMMENT>
                </AISLE>               
                
