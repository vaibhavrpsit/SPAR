                    name="ParamGroupAccepted"
                    letter="Continue"
                    destination="SelectParam"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>
                <ROAD
                    name="ParamGroupDenied"
                    letter="Override"
                    destination="SecurityOverrideStation"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>               
                <ROAD
                    name="ParamGroupNotSelected"
                    letter="Cancel"
                    destination="SelectParamGroup"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>                
                
                <ROAD   name="BackOutOfParams"
                        letter="Undo"
                        destination="Final"
                        tape="ADVANCE" record="ON" index="ON">
                </ROAD>
                
            </SITE>
