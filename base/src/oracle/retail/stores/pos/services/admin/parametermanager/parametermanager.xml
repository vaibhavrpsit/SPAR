                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                    <LIGHT  signal="NoValuesLight"/>
                </ROAD>
                <ROAD
                    name="BackToSelectParamListFromList"
                    letter="Undo"
                    destination="SelectParam"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>
                <ROAD
                    name="CancelEditParamListFromList"
                    letter="Cancel"
                    destination="Final"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>
            </SITE>

        <SITE name="ConfirmDeletion" siteaction="ConfirmDeletionSite">
            <COMMENT>
                Confirm that the user wants to delete the parameter value. 
            </COMMENT>
            <ROAD   name="DeletionAborted" 
                    letter="No" 
                    destination="EditParamListFromList" 
                    laneaction="DeletionAbortedRoad"
                    tape="ADVANCE" record="ON" index="ON">
                <COMMENT>
                        The user changed his mind about deleting the reason 
                        code.
                </COMMENT>
            </ROAD>
            <ROAD   name="DeletionConfirmed" 
                    letter="Yes" 
                    destination="EditParamListFromList" 
                    tape="ADVANCE" record="ON" index="ON">
            </ROAD>
        </SITE>

            <SITE  name="UnmodifiableParam" siteaction="UnmodifiableParamSite">
                <COMMENT >
                    This site tells the user that he is trying to illegally
                    edit a nonmodifiable parameter.
                </COMMENT>
                <ROAD
                    name="UnmodifiableParamOk"
                    letter="Ok"
                    destination="SelectParam"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>
            </SITE>
            <SITE  name="SaveParam" siteaction="SaveParamSite">
                <COMMENT >
                    Save the modified parameter.
                </COMMENT>
                <ROAD
                    name="SaveParamSucceeded"
                    letter="SaveSucceeded"
                    destination="SelectParam"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>
                <ROAD
                    name="SaveParamFailed"
                    letter="SaveFailed"
                    destination="UnsaveableParameter"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>
            </SITE>
        <SITE   name="NoValues" 
                siteaction="NoValuesSite">
            <COMMENT>
                This site presents an error screen after the user 
                has attempted to delete the last parameter value.
            </COMMENT>

            <ROAD   name="NoValuesOk" 
                    letter="Ok" 
                    destination="EditParamListFromList" 
                    tape="ADVANCE" record="ON" index="ON">
            </ROAD>
        </SITE>
            <SITE  name="UnsaveableParameter" siteaction="UnsaveableParameterSite">
                <COMMENT >
                    This site informs the user that the attempted save
                    of the parameters failed.
                </COMMENT>
                <ROAD
                    name="UnsaveableParameterOk"
                    letter="Ok"
                    destination="SelectParamGroup"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>
            </SITE>
            <SITE  name="BadParamValue" siteaction="BadParamValueSite">
                <COMMENT >
                    This site informs the user that the new value he attempted
                    to give to the parameter is illegitimate.
                </COMMENT>
                <ROAD
                    name="BadCurrencyParamValueOk"
                    letter="Ok"
                    destination="EditParamCurrency"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                    <LIGHT  signal="CurrencyParamLight"/>
                </ROAD>
                <ROAD
                    name="BadDecimalParamValueOk"
                    letter="Ok"
                    destination="EditParamDecimal"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                    <LIGHT  signal="DecimalParamLight"/>
                </ROAD>
                <ROAD
                    name="BadISODateParamValueOk"
                    letter="Ok"
                    destination="EditParamISODate"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                    <LIGHT  signal="ISODateParamLight"/>
                </ROAD>
                <ROAD
                    name="BadWholeParamValueOk"
                    letter="Ok"
                    destination="EditParamWhole"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                    <LIGHT  signal="WholeParamLight"/>
                </ROAD>
                <ROAD
                    name="BadDiscreteParamValueOk"
                    letter="Ok"
                    destination="EditParamDiscrete"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                    <LIGHT  signal="DiscreteParamLight"/>
                </ROAD>
                <ROAD
                    name="BadMultilineStringParamValueOk"
                    letter="Ok"
                    destination="EditParamMultilineString"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                    <LIGHT  signal="MultilineStringParamLight"/>
                </ROAD>
                <ROAD
                    name="BadListFromListParamValueOk"
                    letter="Ok"
                    destination="EditParamListFromList"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                    <LIGHT  signal="ListFromListParamLight"/>
                </ROAD>
                <ROAD
                    name="BadStringParamValueOk"
                    letter="Ok"
                    destination="EditParamString"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                    <LIGHT  signal="StringParamLight"/>
                </ROAD>
            </SITE>
            <SITE  name="EditParamString" siteaction="EditParamStringSite">
                <COMMENT >
                    Edit a parameter whose value is a String.
                </COMMENT>
                <AISLE
                    name="StoreNewStringValue"
                    letter="Next"
                    laneaction="StoreNewStringValueAisle">
                    <COMMENT >
                        Store the new String value for the parameter.
                    </COMMENT>
                </AISLE>
                <ROAD
                    name="EditParamStringGoodValueAccepted"
                    letter="AcceptData"
                    destination="SaveParam"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>
                <ROAD
                    name="EditParamStringBadValueAccepted"
                    letter="RejectData"
                    destination="BadParamValue"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>
                <ROAD
                    name="BackToSelectParamString"
                    letter="Undo"
                    destination="SelectParam"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>
                <ROAD
                    name="CancelEditParamString"
                    letter="Cancel"
                    destination="Final"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>
            </SITE>
            <STATION
                name="EditListStation"
                servicename="admin.parametervaluelisteditor.listeditor"
                targettier="CURRENTTIER"
                launchshuttle="ListEditorLaunchShuttle">
                <ROAD
                    name="EditListCancel"
                    letter="Cancel"
                    destination="Final"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>
                <ROAD
                    name="EditListReallyDone"
                    letter="ReallyDone"
                    destination="SaveParam"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>
                <ROAD
                    name="EditListDone"
                    letter="Next"
                    destination="SaveParam"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>
                <ROAD
                    name="EditListUndo"
                    letter="Undo"
                    destination="SelectParam"
                    tape="ADVANCE"
                    record="ON"
                    index="ON">
                </ROAD>
            </STATION>
            <SYSTEMSITE  name="Final" action="RETURN"/>
        </REGION>
    </MAP>
</SERVICE>
