        <SHUTTLE class="OperatorIdOverrideReturnShuttle" package="oracle.retail.stores.pos.services.common"/>
        <SHUTTLE class="SecurityOverrideLaunchShuttle" package="oracle.retail.stores.pos.services.admin.security.common"/>
        <SIGNAL  class="IsGroupAccessSignal"/>    
        <SIGNAL  class="CurrencyParamLight">       
            <COMMENT >
                Light is green when the modifiable parameter has 
                a currency value.
            </COMMENT>
        </SIGNAL>
        <SIGNAL  class="DecimalParamLight">
            <COMMENT >
                Light is green when the modifiable parameter has 
                a decimal value.
            </COMMENT>
        </SIGNAL>
        <SIGNAL  class="ISODateParamLight">
            <COMMENT >
                Light is green when the modifiable parameter has 
                a date value that can be stored as YYYY-MM-DD.
            </COMMENT>
        </SIGNAL>
        <SIGNAL  class="DiscreteParamLight">
            <COMMENT >
                Light is green when the modifiable parameter can 
                take a single value from a discrete set of values.
            </COMMENT>
        </SIGNAL>
        <SIGNAL  class="MultilineStringParamLight">
            <COMMENT >
                Light is green when the modifiable parameter has a value
                that can span several lines.
            </COMMENT>
        </SIGNAL>
        <SIGNAL  class="ListFromListParamLight">
            <COMMENT >
                Light is green when the modifiable parameter can 
                take several of a discrete set of values.
            </COMMENT>
        </SIGNAL>
        <SIGNAL  class="ModifiableListLight">
            <COMMENT >
                This light is green when the parameter is modifiable. 
            </COMMENT>
        </SIGNAL>
        <SIGNAL  class="ModifiableParamLight">
            <COMMENT >
                This light is green when the parameter is modifiable. 
            </COMMENT>
        </SIGNAL>
        <SIGNAL  class="StringParamLight">
            <COMMENT >
                Light is green when a String valued parameter has 
                been chosen for editing.
            </COMMENT>
        </SIGNAL>
        <SIGNAL  class="UnmodifiableListLight">
            <COMMENT >
                This light is green when the parameter is unmodifiable. 
            </COMMENT>
        </SIGNAL>
        <SIGNAL  class="UnmodifiableParamLight">
            <COMMENT >
                This light is green when the parameter is unmodifiable. 
            </COMMENT>
        </SIGNAL>
        <SIGNAL  class="WholeParamLight">
            <COMMENT >
                Light is green when the modifiable parameter has 
                a whole number value.
            </COMMENT>
        </SIGNAL>
        <SIGNAL  class="HasValuesLight">
            <COMMENT >
                Light is green when the parameter has at least one
                parameter value.
            </COMMENT>
        </SIGNAL>
        <SIGNAL  class="NoValuesLight">
            <COMMENT >
                Light is green when the parameter has no parameter values.
            </COMMENT>
        </SIGNAL>
        <SITEACTION class="BadParamValueSite">
            <COMMENT >
                This site informs the user that the new value he attempted 
                to gove to the parameter is illegitimate.
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="ConfirmDeletionSite">
            <COMMENT >
                This site determines whether the user really wants to
                delete the parameter value from the list.
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="EditParamCurrencySite">
            <COMMENT >
                Edit a parameter whose value is a number.
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="EditParamDecimalSite">
            <COMMENT >
                Edit a parameter whose value is a decimal number. 
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="EditParamISODateSite">
            <COMMENT >
                Edit a parameter whose value is a date. 
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="EditParamDiscreteSite">
            <COMMENT >
                Edit a parameter whose value can be one of a discrete 
                set of values.
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="EditParamMultilineStringSite">
            <COMMENT >
                Edit a parameter whose value can span multiple lines.
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="EditParamListFromListSite">
            <COMMENT >
                Edit a parameter whose value can be several of a discrete 
                set of values.
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="EditParamStringSite">
            <COMMENT >
                Edit a parameter whose value is a String.
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="EditParamIntegerSite">
            <COMMENT >
                Edit a parameter whose value is a whole number.
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="SaveParamSite">
            <COMMENT >
                Save the modified parameter.
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="SelectParamGroupSite">
            <COMMENT >
                Choose which parameter group (e.g. tender) will 
                be edited.
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="SelectParamLevelSite">
            <COMMENT >
                Select the location level (e.g., corporation or 
                store) to which the parameters will apply.
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="SelectParamSite">
            <COMMENT >
                Select the parameter to be edited.
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="SelectParamStoreSite">
            <COMMENT >
                Choose the store whose parameters will be edited. 
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="UnmodifiableListSite">
            <COMMENT >
                This site tells the user that he is trying to illegally 
                edit a nonmodifiable parameter.
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="UnmodifiableParamSite">
            <COMMENT >
                This site tells the user that he is trying to illegally 
                edit a nonmodifiable parameter.
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="UnsaveableParameterSite">
            <COMMENT >
                This site informs the user that the attempted save 
                of the parameters failed.
            </COMMENT>
        </SITEACTION>
     <SITEACTION class="NoValuesSite" >
          <COMMENT>
               This site presents an error screen after the user 
               has attempted to delete the last parameter value.
            </COMMENT>
        </SITEACTION>
        <SITEACTION class="CheckAccessSite" package="oracle.retail.stores.pos.services.admin.security.common"/>


    </SERVICECODE>
    <MAP >
        <REGION  region="SERVICE" startsite="CheckSecurityAccess">
          <SITE name="CheckSecurityAccess" siteaction="CheckAccessSite">
              <ROAD
                  name="AccessDenied"
                  letter="Override"
                  destination="SecurityOverrideStation"
                  tape="ADVANCE" record="OFF" index="OFF">
              </ROAD>
              <ROAD
                  name="AccessGranted"
                  letter="Continue"
                  destination="SelectParamGroup"
                  tape="ADVANCE" record="OFF" index="OFF">
              </ROAD>
          </SITE>
          <STATION name="SecurityOverrideStation"
              servicename="security.override.override"
              targettier="CURRENTTIER"
              launchshuttle="SecurityOverrideLaunchShuttle" >
              <ROAD
                  name="SecurityOverrideGranted"
                  letter="Success"
                  destination="SelectParamGroup"
                  tape="ADVANCE" record="OFF" index="OFF">
                  <LIGHT signal="IsGroupAccessSignal" negate="Y"/>
              </ROAD>
              <ROAD
                  name="GroupSecurityOverrideGranted"
                  letter="Success"
                  destination="SelectParam"
                  tape="ADVANCE" record="OFF" index="OFF">
                  <LIGHT signal="IsGroupAccessSignal"/>
              </ROAD> 
                                       
              <ROAD
                  name="SecurityOverrideDenied"
                  letter="Failure"
                  destination="Final"
                  tape="ADVANCE" record="OFF" index="OFF">
                  <LIGHT signal="IsGroupAccessSignal" negate="Y"/>
              </ROAD>
              <ROAD
                  name="ParamewterGroupSecurityOverrideDenied"
                  letter="Failure"
                  destination="SelectParamGroup"
                  tape="ADVANCE" record="OFF" index="OFF">
                  <LIGHT signal="IsGroupAccessSignal"/>
              </ROAD>              
              <ROAD
                  name="SecurityOverrideCancelled"
                  letter="Cancel"
                  destination="Final"
                  tape="ADVANCE" record="OFF" index="OFF">
              </ROAD>
           </STATION>
           <SITE  name="SelectParamGroup" siteaction="SelectParamGroupSite">
                <COMMENT >
                    Choose which parameter group (e.g. tender) will
                    be edited.
                </COMMENT>
